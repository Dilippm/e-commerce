                </footer><!-- End Footer -->

                <a
                    href="#"
                    class="back-to-top d-flex align-items-center justify-content-center">
                    <i class="bi bi-arrow-up-short"></i>
                </a>

                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                <script>
                    const sales = <%- JSON.stringify(sales) %>;
                    const date = <%- JSON.stringify(date) %>;
                
                    document.addEventListener("DOMContentLoaded", () => {
                        new ApexCharts(document.querySelector("#salesChart"), {
                            series: [
                                {
                                    name: 'Sales',
                                    data: sales
                                }
                            ],
                            chart: {
                                height: 350,
                                type: 'area',
                                toolbar: {
                                    show: true
                                }
                            },
                            markers: {
                                size: 4
                            },
                            fill: {
                                type: "gradient",
                                gradient: {
                                    shadeIntensity: 1,
                                    opacityFrom: 0.3,
                                    opacityTo: 0.4,
                                    stops: [0, 90, 100]
                                }
                            },
                            dataLabels: {
                                enabled: false
                            },
                            stroke: {
                                curve: 'smooth',
                                width: 2
                            },
                            xaxis: {
                                type: 'category',
                                categories: date
                            },
                            tooltip: {
                                x: {
                                    show: false
                                }
                            }
                        }).render();
                    });
                </script>
                
                <script>
                    const UPI = <%- JSON.stringify(UPI) %>;
                    const COD = <%- JSON.stringify(COD) %>;
                    const wallet = <%- JSON.stringify(wallet) %>;

                    document.addEventListener("DOMContentLoaded", () => {
                        const chart = new ApexCharts(document.querySelector("#paymentChart"), {
                            // Set pie chart options
                            series: [
                                UPI, COD,wallet
                            ],
                            chart: {
                                width: 380,
                                type: 'pie',
                                toolbar: {
                        show: true,
                      }
                            },
                            labels: [
                                'UPI', 'COD','Wallet'
                            ],
                            responsive: [
                                {
                                    breakpoint: 480,
                                    options: {
                                        chart: {
                                            width: 200
                                        },
                                        legend: {
                                            position: 'bottom'
                                        }
                                    }
                                }
                            ]
                        });

                        chart.render();
                    });
                </script>
             <script>
                const processing = <%- JSON.stringify(processing) %>;
                const delivered = <%- JSON.stringify(delivered) %>;
                const cancelled = <%- JSON.stringify(cancelled) %>;
                const shipped = <%- JSON.stringify(shipped) %>;
                const returned = <%- JSON.stringify(Returned) %>;
              
                const categories = ['Processing', 'Delivered', 'Cancelled', 'Shipped', 'Returned'];
              
                const chartData = [
                  { name: 'Processing', data: [processing] },
                  { name: 'Delivered', data: [delivered] },
                  { name: 'Cancelled', data: [cancelled] },
                  { name: 'Shipped', data: [shipped] },
                  { name: 'Returned', data: [returned] },
                ];
              
                document.addEventListener('DOMContentLoaded', () => {
                  new ApexCharts(document.querySelector('#statusChart'), {
                    series: chartData,
                    chart: {
                      height: 350,
                      type: 'bar',
                      toolbar: {
                        show: true,
                      },
                    },
                    dataLabels: {
                      enabled: false,
                    },
                    stroke: {
                      show: true,
                      width: 1,
                      colors: ['#fff'],
                    },
                    xaxis: {
                      categories,
                      labels: {
                        formatter: (val) => Math.round(val),
                      },
                    },
                    yaxis: {
                      title: {
                        text: '',
                      },
                    },
                    forceNiceScale: true,
                    tooltip: {
                      y: {
                        formatter: (val) => Math.round(val),
                      },
                    },
                  }).render();
                });
              </script>
              
 
